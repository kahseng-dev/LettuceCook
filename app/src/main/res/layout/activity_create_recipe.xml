<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateRecipe">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/lettuceCreateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LettuceCreate!"
                tools:layout_editor_absoluteX="159dp"
                tools:layout_editor_absoluteY="34dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="24dp"
                android:layout_centerHorizontal="true"
                android:textSize="28dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/recipeName"
                android:layout_below="@+id/lettuceCreateText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginStart="24dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="24dp"
                android:inputType="textPersonName"
                android:layout_centerHorizontal="true"
                android:hint="@string/createRecipeName" />

            <Spinner
                android:id="@+id/recipeCategorySpinner"
                android:layout_below="@+id/recipeName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="24dp" />

            <Spinner
                android:id="@+id/recipeAreaSpinner"
                android:layout_below="@+id/recipeCategorySpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="24dp" />

            <Button
                android:background="@drawable/round_primary"
                android:id="@+id/addIngredientButton"
                android:layout_below="@id/recipeAreaSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="24dp"
                android:layout_marginBottom="10dp"
                android:text="@string/addIngredientButton"
                android:drawableRight="@drawable/ic_add"/>

            <LinearLayout
                android:id="@+id/layout_list"
                android:layout_below="@id/addIngredientButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            </LinearLayout>

            <EditText
                android:id="@+id/recipeInstructions"
                android:layout_below="@+id/layout_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="24dp"
                android:hint="@string/createRecipeInstructions" />

            <Button
                android:id="@+id/createRecipeButton"
                android:layout_below="@id/recipeInstructions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_centerHorizontal="true"
                android:text="@string/createRecipeButton" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LettuceCook" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_green</item>
        <item name="colorPrimaryVariant">@color/light_green</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize theme here. -->
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="ThemeOverlay.LettuceCook.AppWidgetContainer" parent="">
        <item name="appWidgetBackgroundColor">@color/dark_green</item>
        <item name="appWidgetTextColor">@color/white</item>
    </style>
</resources>